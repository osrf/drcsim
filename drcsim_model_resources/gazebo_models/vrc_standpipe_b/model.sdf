      <!-- stop the coupling from entering pipe if valve is open -->
      <collision name="collision_stopper">
        <pose>0 0 0.22 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.0759</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.6</mu>
              <mu2>0.6</mu2>
