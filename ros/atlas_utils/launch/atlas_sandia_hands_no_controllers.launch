<launch>

  <arg name="gzname" default="gazebo"/>
  <arg name="gzworld" default="atlas_sandia_hands.world"/>
  <param name="/use_sim_time" type="bool" value="true"/>

  <!-- start gazebo with the Atlas -->
  <node name="gazebo" pkg="atlas_utils" type="run_$(arg gzname)" args="$(arg gzworld)" output="screen" />

  <!-- Robot Description -->
  <param name="robot_description" textfile="$(find atlas_sandia_hands)/atlas_sandia_hands.urdf"/>

  <node pkg="robot_state_publisher" type="state_publisher" name="sandia_hands_l_hand_robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
    <remap from="joint_states" to="/sandia_hands/l_hand/joint_states" />
  </node>
  <node pkg="robot_state_publisher" type="state_publisher" name="sandia_hands_r_hand_robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
    <remap from="joint_states" to="/sandia_hands/r_hand/joint_states" />
  </node>

  <!-- static transform publisher -->
  <node pkg="tf" type="static_transform_publisher" name="imu_link_broadcaster" args="0 0 0 0.05991527603 0 -0.01415 pelvis imu_link 100" />
  <node pkg="tf" type="static_transform_publisher" name="left_palm_broadcaster" args="0  0.1 -0.03 0 3.1416 -1.57079 l_hand left_palm 100" />
  <node pkg="tf" type="static_transform_publisher" name="right_palm_broadcaster" args="0 -0.1 -0.03 0 3.1416  1.57079 r_hand right_palm 100" />

</launch>
  

