# This file is intended to be used when you want the latest installed version of
# drcsim

# Find all drcsim installations with setup.sh files, sort them, and take the
# last one (which should be the latest, assuming lexicographic sorting and
# strictly increasing version numbers).
setup=`find @CMAKE_INSTALL_PREFIX@/share -path @CMAKE_INSTALL_PREFIX@/share/drcsim-'*'/setup.sh | sort | tail -n 1`

if [ -z $setup ]; then
  echo "ERROR: Couldn't find a drcsim setup.sh in @CMAKE_INSTALL_PREFIX@/share"
  false
elif [ ! -f $setup ]; then
  echo "ERROR: Setup file $setup doesn't exist"
  false
else
  # Otherwise, looks good.  Source it.
  . $setup
fi
