<?xml version='1.0'?>
<sdf version='1.3'>
  <model name='valve'>
    <static>false</static>
    <link name='wheel'>
      <collision name="collision">
        <pose>0 0 0.15 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://vrc_valve/meshes/vrc_valve.dae</uri>
          </mesh>
          <!--          <cylinder>
            <radius>0.08</radius>
            <length>0.2</length>
          </cylinder>
-->
        </geometry>
      </collision>

      <visual name="visual">
        <pose>0 0 0.15 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://vrc_valve/meshes/vrc_valve.dae</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
    </link>

    <link name="pipe">
      <pose>0 0 0.25 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
    </link>

    <joint name="joint" type="revolute">
      <child>pipe</child>
      <parent>wheel</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-6</lower>
          <upper>6</upper>
        </limit>
      </axis>
    </joint>

    <joint name="world_joint" type="revolute">
      <child>pipe</child>
      <parent>world</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
  </model>
</sdf>
